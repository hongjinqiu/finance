<?xml version="1.0" encoding="UTF-8"?>
<list-template xmlns="http://www.papersns.com/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.papersns.com/template http://www.papersns.com/template ">
	<id>Article</id>
	<selector-id>ArticleSelector</selector-id>
	<data-source-model-id>Article</data-source-model-id>

	<adapter name="ModelListTemplateAdapter" />
	<description>项目列表</description>
	<cookie name="Article"/>
	<scripts>js/ds_listtoolbar.js</scripts>
	<view-template view="Console/ListSchema.html" selectorView="Console/SelectorSchema.html" selectorScripts="" />

	<toolbar export="true">
		<button text="新增" mode="url" handler="/console/formschema?@name=Article" iconCls="but_box" />

		<button text="删除" mode="fn" handler="g_deleteRecords" iconCls="but_box">
		</button>
		<button text="新增" mode="url!" handler="/console/formschema?@name=Article" iconCls="but_box" use-in="selector" />	</toolbar>

	<security byUnit="true"/>
	
	<data-provider size="10">
		<collection></collection><!-- mongoDB collection name -->
		<fix-bson-query></fix-bson-query><!-- mongoDB fix query, json format -->
	</data-provider>

	<column-model selectionMode="checkbox" rownumber="true" selectionTitle="已选项目" selectionTemplate="{code},{name}" bsonOrderBy="-code" dataSetId="A">
		<checkbox-column name="checkboxSelect" hideable="false">
			<expression></expression>
		</checkbox-column>
		<id-column name="id" text="编号" hideable="true" />

		<virtual-column name="FUN_C" text="操作" width="120">
			<buttons>
				<button text="编辑" iconCls="img_edit" mode="url" handler="/console/formschema/?@name=Article&amp;id={id}">
				</button>
				<button text="复制" iconCls="img_add" mode="url" handler="/console/formschema/?@name=Article&amp;id={id}&amp;copyFlag=true">
				</button>
				<button name="btn_delete" text="删除" iconCls="img_delete" mode="fn" handler="g_deleteRecord">
				</button>
				<button name="btn_view" text="查看" iconCls="img_look" mode="url" handler="/console/formschema/?@name=Article&amp;id={id}&amp;formStatus=view">
				</button>
			</buttons>
		</virtual-column>
		<virtual-column name="FUN_C_SELECTOR" text="操作" width="40" use-in="selector">
			<buttons>
				<button name="btn_view" text="查看" iconCls="img_look" mode="url!" handler="/console/formschema/?@name=Article&amp;id={id}&amp;formStatus=view">
				</button>
			</buttons>
		</virtual-column>

		<auto-column name="code" />
		<auto-column name="name" />
		<auto-column name="articleTypeId" />
	</column-model>

	<query-parameters dataSetId="A">
		<query-parameter name="code" auto="true" text=""></query-parameter>
		<query-parameter name="name" auto="true" text=""></query-parameter>
		<query-parameter name="articleTypeId" auto="true" text="" restriction="in">
			<relationDS>
				<relationItem name="ArticleType">
					<relationConfig selectionMode="multi"/>
				</relationItem>
			</relationDS>
		</query-parameter>
	</query-parameters>
</list-template>
