<?xml version="1.0" encoding="UTF-8"?>
<list-template xmlns="http://www.papersns.com/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.papersns.com/template http://www.papersns.com/template ">
	<id>SystemParameter</id>
	<selector-id>SystemParameterSelector</selector-id>
	<data-source-model-id>SystemParameter</data-source-model-id>

	<adapter name="ModelListTemplateAdapter" />
	<description>系统参数列表</description>
	<scripts>js/ds_listtoolbar.js</scripts>
	<view-template view="Console/ListSchema.html" selectorView="Console/SelectorSchema.html" selectorScripts="" />

	<toolbar export="true">
		<button text="新增" mode="url" handler="/console/formschema?@name=SystemParameter" iconCls="test" />

		<button text="删除" mode="fn" handler="g_deleteRecords">
		</button>
	</toolbar>

	<data-provider size="10">
		<collection></collection><!-- mongoDB collection name -->
		<fix-bson-query></fix-bson-query><!-- mongoDB fix query, json format -->
	</data-provider>

	<column-model selectionMode="checkbox" rownumber="true" selectionTitle="已选系统参数" selectionTemplate="{code},{name}" bsonOrderBy="code" dataSetId="A">
		<checkbox-column name="checkboxSelect" hideable="false">
			<expression></expression>
		</checkbox-column>
		<id-column name="id" text="编号" hideable="true" />

		<virtual-column name="FUN_C" text="操作" width="40">
			<buttons>
				<button text="编辑" iconCls="bj_btn" mode="url" handler="/console/formschema/?@name=SystemParameter&amp;id={id}">
				</button>
				<button name="btn_delete" text="删除" iconCls="bj_btn" mode="fn" handler="g_deleteRecord">
				</button>
				<button name="btn_view" text="查看" iconCls="ck_btn" mode="url" handler="/console/formschema/?@name=SystemParameter&amp;id={id}&amp;formStatus=view">
				</button>
			</buttons>
		</virtual-column>

		<auto-column name="percentDecimals" />
		<auto-column name="percentRoundingWay" />
		<auto-column name="thousandDecimals" />
		<auto-column name="currencyTypeId" />
		<auto-column name="costDecimals" />
		<auto-column name="taxTypeId" />
		<number-column name="taxRate" text="税率(%)" isPercent="true" />
	</column-model>

	<query-parameters dataSetId="A">
		<query-parameter name="percentDecimals" auto="true" text=""></query-parameter>
		<query-parameter name="percentRoundingWay" auto="true" text=""></query-parameter>
		<query-parameter name="thousandDecimals" auto="true" text=""></query-parameter>
		<query-parameter name="currencyTypeId" auto="true" text=""></query-parameter>
		<query-parameter name="costDecimals" auto="true" text=""></query-parameter>
		<query-parameter name="taxTypeId" auto="true" text=""></query-parameter>
	</query-parameters>
</list-template>
