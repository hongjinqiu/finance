<?xml version="1.0" encoding="UTF-8"?>
<form-template xmlns="http://www.papersns.com/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.papersns.com/template http://www.papersns.com/template ">
	<id>GatheringBill</id>
	<data-source-model-id>GatheringBill</data-source-model-id>
	<adapter name="ModelFormTemplateAdapter" />
	<description>收款单表单</description>
	<scripts>gatheringbill/gatheringBillModel.js</scripts>
	<view-template view="Console/FormSchema.html"/>
	<toolbar>
		<button name="listBtn" text="列表页" mode="url" handler="/console/listschema?@name=GatheringBill" iconCls="test"></button>
		<button name="newBtn" text="新增" mode="fn" handler="newData" iconCls=""></button>
		<button name="copyBtn" text="复制" mode="fn" handler="copyData"></button>
		<button name="editBtn" text="修改" mode="fn" handler="editData" iconCls=""></button>
		<button name="saveBtn" text="保存" mode="fn" handler="saveData" iconCls=""></button>
		<button name="giveUpBtn" text="放弃" mode="fn" handler="giveUpData" iconCls=""></button>
		<button name="delBtn" text="删除" mode="fn" handler="deleteData" iconCls=""></button>
		<button name="cancelBtn" text="作废" mode="fn" handler="cancelData" iconCls=""></button>
		<button name="unCancelBtn" text="反作废" mode="fn" handler="unCancelData" iconCls=""></button>
		<button name="refreshBtn" text="刷新" mode="fn" handler="refreshData" iconCls=""></button>
		<button name="usedQueryBtn" text="被用查询" mode="fn" handler="logList" iconCls=""></button>
	</toolbar>
	
	<column-model dataSetId="A" colSpan="6">
		<id-column name="id" text="编号" hideable="true" />
		
		<auto-column name="billDate" colSpan="2" labelWidth="13%" columnWidth="20%" />
		<auto-column name="billNo" colSpan="2" labelWidth="13%" columnWidth="20%" />
		<auto-column name="billTypeId" colSpan="2" labelWidth="13%" />
		<auto-column name="property" colSpan="2" />
	</column-model>

	<html>
		<![CDATA[
			<div>基本信息</div>
			<div>收款账户信息</div>
		]]>
	</html>
	
	<column-model dataSetId="A" colSpan="6">
		<auto-column name="accountId" colSpan="2" labelWidth="13%" columnWidth="20%" />
		<select-column name="receiveBankId" text="开户银行" colSpan="2" labelWidth="13%" columnWidth="20%" />
		<string-column name="receiveBankAccount" text="银行帐号" colSpan="2" labelWidth="13%" />
		<dictionary-column dictionary="D_FIN_ACCOUNT_PROPERTY" name="accountProperty" text="账户属性" colSpan="2" />
		<auto-column name="balanceDate" colSpan="2" />
		<auto-column name="balanceTypeId" colSpan="2" />
		<auto-column name="balanceNo" colSpan="2" />
	</column-model>
	
	<html>
		<![CDATA[
			<div>帐款信息</div>
		]]>
	</html>
	
	<column-model dataSetId="A" colSpan="6">
		<auto-column name="chamberlainType" colSpan="2" labelWidth="13%" columnWidth="20%" />
		<auto-column name="chamberlainId" colSpan="2" labelWidth="13%" columnWidth="20%" />
		<auto-column name="chamberlainDesc" colSpan="2" labelWidth="13%" />
		<auto-column name="sysUserId" colSpan="2" />
		<auto-column name="articleId" colSpan="2" />
		<auto-column name="currencyTypeId" colSpan="2" />
		<auto-column name="exchangeRateShow" colSpan="2" />
		<auto-column name="exchangeRate" colSpan="2" hideable="true" />
		<auto-column name="amtGathering" colSpan="2" />
		<auto-column name="amtAgainst" colSpan="2" />
		<auto-column name="amtNotAgainst" colSpan="2" />
	</column-model>
	
	<html>
		<![CDATA[
			<div>付款人信息</div>
		]]>
	</html>
	
	<column-model dataSetId="A" colSpan="6">
		<auto-column name="chamberlainName" colSpan="2" labelWidth="13%" columnWidth="20%" />
		<auto-column name="bankId" colSpan="2" labelWidth="13%" columnWidth="20%" />
		<auto-column name="bankShort" colSpan="2" labelWidth="13%" />
		<auto-column name="bankAccount" colSpan="2" />
		<auto-column name="linkman" colSpan="2" />
		<auto-column name="linkPhone" colSpan="2" />
	</column-model>
	
	<column-model dataSetId="B">
		<toolbar>
			<button text="选择" mode="fn" handler="actionTestBSelect" iconCls="test"></button>
			<button text="新增" mode="fn" handler="g_addRow" iconCls="yui3-button btn-show"></button>
			<button text="编辑" mode="fn" handler="g_editRow" iconCls="test"></button>
			<button text="删除" mode="fn" handler="g_removeRow" iconCls="test"></button>
		</toolbar>
		<checkbox-column name="checkboxSelect" hideable="false" />
		<id-column name="id" text="编号" hideable="true" />
		<virtual-column name="FUN_C" text="操作">
			<buttons>
				<button text="编辑" mode="fn" handler="g_editSingleRow" iconCls="test"></button>
				<button text="复制" mode="fn" handler="g_copyRow" iconCls="test"></button>
				<button text="删除" mode="fn" handler="g_removeSingleRow" iconCls="test"></button>
			</buttons>
		</virtual-column>
		<auto-column name="accountType" />
		<auto-column name="accountId">
			<relationDS>
				<relationItem name="BankAccount">
					<copyConfig copyColumnName="bankId" copyValueField="bankId" />
					<copyConfig copyColumnName="bankAccount" copyValueField="bankAccount" />
				</relationItem>
			</relationDS>
		</auto-column>
		<auto-column name="bankId" text="费用银行" dsFieldMap="BankAccount.A.bankId" />
		<string-column name="bankAccount" text="费用银行帐号" />
		<auto-column name="incomeItemId" />
		<auto-column name="amtFee" />
	</column-model>
</form-template>
